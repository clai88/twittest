<h1>These are your tweets</h1>

<% if @tweets == [] %>
<h5>You currently have no tweets</h5>
<% else %>
<% @tweets.each do |tweet| %>
<article class="tweet">
  <p>
    <%= link_to "#{tweet.body}", tweet_path(tweet.id) %>
  </p>
  <%= link_to "@#{tweet.user.name}", profile_path(tweet.user_id) %>
  <cite> |
    <%= link_to "edit", edit_tweet_path(tweet.id) %> |
    <%= link_to "delete", tweet_path(tweet.id), method: :delete %> |
    <%= tweet.time_elapsed %>

  </cite>
</article>
<% end %>
<% end %>
<br>

<button type="button" class="btn btn-default">
  <%= link_to "Back to all tweets", welcome_path %>
</button>

<% if current_user %>
<button type="button" class="btn btn-default">
  <%= link_to "Post new tweet", new_tweet_path %>
</button>
<% end %>
